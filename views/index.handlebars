<div class="container">	
	<div class="jumbotron"> 
		<img src="/assets/img/burger.jpg" > 
		<h1> Eat-Da-Burger! </h1> 
	</div>

	{{!-- burger list before being eaten --}}
	<div class="row">
		<div class="col-xs-6 col-xs-offset-0">
			<div class="panel-panel default">
				<ol class="list-group">
				{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item">
						<div class="input-group">
							<p class="lead"> {{this.burger_name}} </p>
							<span class="input-group-btn">
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-default btn-md" type="submit"> Devoured It! </button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
				{{/each}}
			</ol>
		</div>
	</div>
		{{!-- burger list after being eaten --}}
	<div class="row">
		<div class="col-xs-4 col-xs-offset-2">
			{{!-- <div class="panel panel-default"> --}}
				<ol class="list-group">

				{{#each burgers}}
					{{#if this.devoured}}
					<li class="list-group-item">
						<p class="lead">{{this.burger_name}} </p>
					</li>
					{{/if}}
				{{/each}}
				</ol>
			{{!-- </div> --}}
		</div>
	</div>

	<div class="col-xs-6 col-xs-offset-3">
		<p class="lead"> Enter the name of the burger you want to eat!  </p>
		<p class="lead">  & click the submit button. </p>

		{{!-- section to add burgers --}}
		<form class="create-update-form" action="burgers/create" method="POST">

			<div class="form-group">
				<textarea class="form-control input-lg" type="text" name="b_name" rows="3"> </textarea>
			</div>

			<button class="btn btn-default btn-md" type="submit">Add Your Burger!</button>
		</form>
	</div>
</div>
